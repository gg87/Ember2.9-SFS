<div id="userDetails">
    {{#link-to 'user.detail.todos' model.id  tagName="button" class="btn btn-success top-right"}}
        {{t "SHOW_TODOS"}}
    {{/link-to}}
    <h4>{{t "USER_DETAIL"}}</h4>
    <form>
        <div class="form-group">
            <label for="name">{{userId}}</label>
            <span>{{t "NAME"}}</span>
            {{input id="name" class="form-control" name="name" type="text" value=model.name}}
        </div>
        <div class="form-group">
            <label for="email">{{t "EMAIL"}}</label>
            <div class="input-group">
                <span class="input-group-addon">@</span>
                {{input id="email" class="form-control" name="email" type="text" value=model.email}}
            </div>
        </div>
        <div class="form-group">
            <label for="username">{{t "USERNAME"}}</label>
            {{input id="username" class="form-control" name="username" type="text" value=model.username}}
        </div>
        <div class="form-group">
            <label for="phone">{{t "PHONE"}}</label>
            {{input id="phone" class="form-control" name="phone" type="text" value=model.phone}}
        </div>
        <button class="btn btn-primary" {{action 'updateUser' model}}>{{t "UPDATE_USER"}}</button>
        <button class="btn btn-info" {{action 'sayName' model.name model.username}}>{{t "SAY_NAME"}}</button>
    </form>
</div>
